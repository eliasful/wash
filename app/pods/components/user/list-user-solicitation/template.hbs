<ul class="list-group mb-3">
  {{#each model.userSolicitations as |userSolicitation|}}
    <li class="list-group-item d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0">{{userSolicitation.userService.service.description}}</h6>
        <small class="text-muted"><a href="#">Adicionar observação</a></small>
      </div>
      <span class="text-muted">
        R$ {{mult userSolicitation.userService.price userSolicitation.quantity}}
      </span>
    </li>
  {{/each}}
  <li class="list-group-item d-flex justify-content-between">
    <span>Total</span>
    <strong>R$ {{totalServices}}</strong>
  </li>
</ul>
{{#if model.userSolicitations.length}}
  <button type="button" class="btn btn-lg btn-block btn-primary" {{action 'verifyLogin'}}>
    Solicitar e continuar
  </button>
{{/if}}
