<div class="card">
  <div class="card-body">
    <h4>Informações sobre você</h4>
    <div class="dropdown-divider"></div>
    {{#bs-form model=model onSubmit=(action "submit" model) as |form|}}
      <div class="row">
        <div class="col-sm-12">
          {{form.element controlType="text" label="Nome" placeholder="ex.: João das Neves" property="name" required=true}}
        </div>
        <div class="col-sm-12">
          {{form.element controlType="phone" label="Telefone" placeholder="ex.: (00) 1234-5678" property="phone"}}
        </div>
        <div class="col-sm-12">
          {{form.element controlType="email" label="Email" placeholder="ex.: joao@email.com" property="email"}}
        </div>
        <div class="col-sm-12">
          {{#bs-button type="primary" block=true buttonType="submit"disabled=form.isSubmitting}}
            Cadastrar  e continuar
          {{/bs-button}}
        </div>
      </div>
    {{/bs-form}}
  </div>
</div>