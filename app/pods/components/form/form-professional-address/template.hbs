<h4>Informações sobre seu endereço</h4>
<div class="dropdown-divider"></div>
{{#bs-form model=model onSubmit=(action "submit") as |form|}}
  <div class="row">
    <div class="col-sm-12">
      {{form.element elementId="address" controlType="text" label="Endereço completo"
                     placeholder="ex.: Rua Itacolomi, 306 - Centro, Pato Branco - PR, Brasil"
                     property="address" required=true}}
    </div>
    <div class="col-sm-12">
      {{#bs-button type="primary" block=true buttonType="submit"}}
        Finalizar cadastro
      {{/bs-button}}
    </div>
  </div>
{{/bs-form}}
