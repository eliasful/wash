{{#bs-form model=model onSubmit=(action "submit") as |form|}}
  <div class="row">
    <div class="col-sm-12">
      {{form.element controlType="name" label="Nome" placeholder="ex.: Jo√£o das Neves" property="name"}}
    </div>
    <div class="col-sm-12">
      {{form.element controlType="phone" label="Telefone" placeholder="ex.: (00) 1234-5678" property="phone"}}
    </div>
    <div class="col-sm-12">
      {{form.element controlType="email" label="Email" placeholder="ex.: joao@email.com" property="email"}}
    </div>
    <div class="col-sm-12">
      {{bs-button defaultText="Enviar e continuar" type="primary" block=true buttonType="submit" }}
    </div>
  </div>
{{/bs-form}}